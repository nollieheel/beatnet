{sys, [
       {lib_dirs, ["../apps", "../deps"]},
       {rel, "beatnet", "1",
        [
         kernel,
         stdlib,
         sasl,
         inets,
         crypto,
         public_key,
         mochiweb,
         webmachine,
         ibrowse,
         lager,
         folsom,
         mnesia,
         syntax_tools,
         beatnet
        ]},
       {rel, "start_clean", "",
        [
         kernel,
         stdlib
        ]},
       {boot_rel, "beatnet"},
       {profile, embedded},
       {excl_sys_filters, ["^bin/.*",
                           "^erts.*/bin/(dialyzer|typer)"]},
       {app, sasl, [{incl_cond, include}]}
      ]}.

{target_dir, "beatnet"}.

{overlay, [
           {mkdir, "log/sasl"},
           {copy, "files/erl", "\{\{erts_vsn\}\}/bin/erl"},
           {copy, "files/nodetool", "\{\{erts_vsn\}\}/bin/nodetool"},
           {copy, "files/beatnet", "bin/beatnet"},
           {copy, "files/app.config", "etc/app.config"},
           {copy, "files/vm.args", "etc/vm.args"}
          ]}.
