{deps, 
 [
  {lager, ".*", {git, "git://github.com/basho/lager.git", {branch, "master"}}},
  {meck, ".*", {git, "git://github.com/eproxus/meck", "master"}}
 ]}.

{lib_dirs, ["deps", "apps"]}.

{erl_opts, 
